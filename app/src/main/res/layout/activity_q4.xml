<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_q4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shivammishra.storm.q4"
    android:background="@android:drawable/ic_menu_mapmode"
    android:backgroundTint="@android:color/holo_orange_dark"
    android:backgroundTintMode="multiply">

    <TextView
        android:text="Which country will host 2018 fifa World cup ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:id="@+id/textView23"
        android:textSize="28sp"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/background_dark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="-------Q4-------"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/textView19"
        android:textSize="40sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="@color/colorPrimary" />

    <Button
        android:text="Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/button11"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:background="@android:color/holo_blue_light" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="225dp"
        android:id="@+id/RadioGroup4"
        android:layout_below="@+id/textView23"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp">

        <RadioButton
            android:text="brazil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton10"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textStyle="normal|bold"
            android:textSize="24sp" />

        <RadioButton
            android:text="spain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton12"
            android:layout_weight="1"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:textAllCaps="true"
            android:textAlignment="center" />

        <RadioButton
            android:text="Russia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton11"
            android:layout_weight="1"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:textAllCaps="true"
            android:textAlignment="center" />
    </RadioGroup>

    <TextView
        android:text="-------------------"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView27"
        android:textStyle="normal|bold"
        android:textSize="40sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_above="@+id/button11"
        android:layout_alignStart="@+id/textView19"
        android:layout_marginBottom="15dp" />
</RelativeLayout>
